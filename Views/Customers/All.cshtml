@model List<TannerG_DBProg_FinalProject.Models.Customer>
@{
    ViewBag.Title = "All";
}

<h2>All Customers</h2>

<a href="/Customers/Upsert/0">Add New</a>

<div class="row">
    <div class="col-md-6">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-info" value="Search" onclick="Sortable.search();" />
    </div>
</div>

<table class="sortable table table-hover">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(0);">Customer ID</th>
            <th onclick="Sortable.Sort(1);">Customer Name</th>
            <th onclick="Sortable.Sort(2);">Customer City</th>
            <th onclick="Sortable.Sort(3);">Customer State</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.Name</td>
                <td>@customer.City</td>
                <td>@customer.State</td>
                <td>
                    <a href="/Customers/Upsert/@customer.CustomerID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    Sortable.baseUrl = "/Customers/All/";
</script>